<?xml version="1.0"?>
<telemetryd-config>

    <!-- JTI Listener & adpaters -->

    <listener name="JTI-UDP-50000" class-name="org.opennms.netmgt.telemetry.listeners.udp.UdpListener" enabled="false">
        <parameter key="port" value="50000"/>

        <parser name="JTI-Parser" class-name="" enabled="true">
            <adapter>JTI-GPB</adapter>
        </parser>
    </listener>

    <adapter name="JTI-GPB" class-name="org.opennms.netmgt.telemetry.adapters.jti.JtiGpbAdapter" enabled="true">
        <parameter key="script" value="${install.dir}/etc/telemetryd-adapters/junos-telemetry-interface.groovy"/>

        <package name="JTI-Default">
            <rrd step="300">
                <rra>RRA:AVERAGE:0.5:1:2016</rra>
                <rra>RRA:AVERAGE:0.5:12:1488</rra>
                <rra>RRA:AVERAGE:0.5:288:366</rra>
                <rra>RRA:MAX:0.5:288:366</rra>
                <rra>RRA:MIN:0.5:288:366</rra>
            </rrd>
        </package>
    </adapter>

    <!-- Netflow v5 listener & adapters -->

    <listener name="Netflow-5-UDP-8877" class-name="org.opennms.netmgt.telemetry.listeners.udp.UdpListener" enabled="false">
        <parameter key="port" value="8877"/>

        <parser name="Netflow-5-Parser" class-name="" enabled="true">
            <adapter>Netflow-5-Adapter</adapter>
        </parser>
    </listener>

    <adapter name="Netflow-5-Adapter" class-name="org.opennms.netmgt.telemetry.adapters.netflow.v5.Netflow5Adapter" enabled="true">
    </adapter>

    <!-- Netflow v9 listener & adapters -->


    <listener name="Netflow-9-UDP-4729" class-name="org.opennms.netmgt.telemetry.listeners.flow.parser.netflow9.UdpListener" enabled="false">
        <parameter key="port" value="4729"/>

        <parser name="Netflow-9-Parser" class-name="" enabled="true">
            <adapter>Netflow-9-Adapter</adapter>
        </parser>
    </listener>

    <adapter name="Netflow-9-Adapter" class-name="org.opennms.netmgt.telemetry.adapters.netflow.v9.Netflow9Adapter" enabled="true">
    </adapter>

    <!-- IPFIX listener & adapters -->

    <listener name="IPFIX-UDP-4730" class-name="org.opennms.netmgt.telemetry.listeners.flow.parser.ipfix.UdpListener" enabled="false">
        <parameter key="port" value="4730"/>

        <parser name="IPFIX-UDP-Parser" class-name="" enabled="true">
            <adapter>IPFIX-Adapter</adapter>
        </parser>
    </listener>

    <listener name="IPFIX-TCP-4730" class-name="org.opennms.netmgt.telemetry.listeners.flow.parser.ipfix.TcpListener" enabled="false">
        <parameter key="port" value="4730"/>

        <parser name="IPFIX-TCP-Parser" class-name="" enabled="true">
            <adapter>IPFIX-Adapter</adapter>
        </parser>
    </listener>

    <adapter name="IPFIX-Adapter" class-name="org.opennms.netmgt.telemetry.adapters.netflow.ipfix.IpfixAdapter" enabled="true">
    </adapter>

    <!-- SFlow listener & adapters -->

    <listener name="SFlow-UDP-6343" class-name="org.opennms.netmgt.telemetry.listeners.sflow.Listener" enabled="false">
        <parameter key="port" value="6343"/>

        <parser name="SFlow-Parser" class-name="" enabled="true">
            <adapter>SFlow-Adapter</adapter>
            <adapter>SFlow-Telemetry</adapter>
        </parser>
    </listener>

    <adapter name="SFlow-Adapter" class-name="org.opennms.netmgt.telemetry.adapters.netflow.sflow.SFlowAdapter" enabled="true">
    </adapter>

    <adapter name="SFlow-Telemetry" class-name="org.opennms.netmgt.telemetry.adapters.netflow.sflow.SFlowTelemetryAdapter" enabled="true">
        <parameter key="script" value="${install.dir}/etc/telemetryd-adapters/sflow-host.groovy"/>

        <package name="SFlow-Default">
            <rrd step="300">
                <rra>RRA:AVERAGE:0.5:1:2016</rra>
                <rra>RRA:AVERAGE:0.5:12:1488</rra>
                <rra>RRA:AVERAGE:0.5:288:366</rra>
                <rra>RRA:MAX:0.5:288:366</rra>
                <rra>RRA:MIN:0.5:288:366</rra>
            </rrd>
        </package>
    </adapter>

    <!-- NXOS listener & adapters -->

    <listener name="NXOS-UDP-50001" class-name="org.opennms.netmgt.telemetry.listeners.udp.UdpListener" enabled="false">
        <parameter key="port" value="50001"/>

        <parser name="NXOS-GPB" class-name="" enabled="true">
            <adapter>SFlow-Adapter</adapter>
        </parser>
    </listener>

    <adapter name="NXOS-GPB" class-name="org.opennms.netmgt.telemetry.adapters.nxos.NxosGpbAdapter" enabled="true">
        <parameter key="script" value="${install.dir}/etc/telemetryd-adapters/cisco-nxos-telemetry-interface.groovy"/>

        <package name="NXOS-Default">
            <rrd step="300">
                <rra>RRA:AVERAGE:0.5:1:2016</rra>
                <rra>RRA:AVERAGE:0.5:12:1488</rra>
                <rra>RRA:AVERAGE:0.5:288:366</rra>
                <rra>RRA:MAX:0.5:288:366</rra>
                <rra>RRA:MIN:0.5:288:366</rra>
            </rrd>
        </package>
    </adapter>

</telemetryd-config>
